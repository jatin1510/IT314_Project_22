    <div id="Profile" class="p-4 p-md-5 pt-5">

      <div class="userimage">
        <h2 class="mb-4">Welcome, <%= student.firstName %> <%= student.lastName %> </h2>
      </div>
      <form action="/updateStudent" method="POST">

        <table class="table table-hover">
          <tr>
            <td> Email Address </td>
            <td>:</td>
            <td> <input style="width: 100%;" type="email" value="<%= student.email %>" placeholder="Enter your Student Id"> </td>
          </tr>
          <tr>
            <td>First Name </td>
            <td>:</td>
            <td> <input type="text" value="<%= student.firstName %>" placeholder="Enter your Name"> </td>
          </tr>
          <tr>
            <td>Middle Name</td>
            <td>:</td>
            <td> <input type="text" value="<%= student.middleName %>" placeholder="Enter your Middle Name"> </td>
          </tr>
          <tr>
            <td>Last Name </td>
            <td>:</td>
            <td> <input type="text" value="<%= student.lastName %>" placeholder="Enter your Last Name"> </td>
          </tr>
          <tr>
            <td>Date Of Birth</td>
            <td>:</td>
            <td><input type="date" value="<%= student.dob %>" placeholder="<%= new Date(student.dob).toDateString() %>"></td>
          </tr>
          <tr>
            <td>Gender</td>
            <td>:</td>
            <td> <input type="text" value="<%= student.gender %>" placeholder="Enter your Last Name"> </td>
          </tr>
          <tr>
            <td>Mobile Nnumber</td>
            <td>:</td>
            <td> <input type="number" value="<%= student.mobileNumber %>" placeholder="Enter your Mobile Nnumber"> </td>
          </tr>
          <tr>
            <td>Alternative Mobile Nnumber</td>
            <td>:</td>
            <td> <input type="number" value="<%= student.alternateMobileNumber %>" placeholder="Enter your Mobile Nnumber"> </td>
          </tr>
          <tr>
            <td>10th Percentage</td>
            <td>:</td>
            <td><input type="number" min="1" max="100" step="0.01" value="<%= student.tenthPercentage %>" placeholder="Enter 10th Percentage"></td>
          </tr>
          <tr>
            <td>12th Percentage</td>
            <td>:</td>
            <td><input type="number" min="1" max="100" step="0.01" value="<%= student.twelfthPercentage %>" placeholder="Enter 12th Percentage"></td>
          </tr>
          <tr>
            <td>CGPA</td>
            <td>:</td>
            <td> <input type="number" min="1" max="100" step="0.01" value="<%= student.cpi %>" placeholder="Enter CPI"> </td>
          </tr>
          <tr>
            <td>Active Backlogs</td>
            <td>:</td>
            <td> <input type="number" value="<%= student.activeBacklog %>" placeholder="Enter Current Backlogs"> </td>
          </tr>
          <tr>
            <td>Total Backlogs</td>
            <td>:</td>
            <td> <input type="number" value="<%= student.totalBacklog %>" placeholder="Enter Total Backlogs"> </td>
          </tr>
          <tr>
            <td>Branch</td>
            <td>:</td>
            <td> <input type="text" value="<%= student.branch %>" placeholder="Enter Total Backlogs"> </td>
          </tr>
          <tr>
            <td>Resume</td>
            <td>:</td>
            <td> <input type="text" value="<%= student.resume %>" placeholder="Enter Total Backlogs"> </td>
          </tr>
